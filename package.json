{
  "name": "ssb-validate2-rsjs",
  "version": "0.2.0",
  "description": "Cryptographic validation of Scuttlebutt messages in the form of Rust bindings.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssb-ngi-pointer/ssb-validate2-rsjs"
  },
  "author": "Andrew Reid <glyph@mycelial.technology>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "async-append-only-log": "^3.0.8",
    "jitdb": "^3.0.2",
    "mkdirp": "^1.0.4",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ssb-fixtures": "^2.2.0",
    "ssb-validate": "^4.1.4",
    "tape": "^5.2.2"
  },
  "scripts": {
    "build": "rm -rf native/dist && rm -rf web/pkg && npm run build:web && npm run build:native",
    "build:native": "cd native && nj-cli build --release",
    "build:web": "cd web && wasm-pack build --target web",
    "test": "npm run test:native",
    "test:native": "tape native/test/test.js && tape native/test/multiAuthorTest.js",
    "perf": "npm run perf:native",
    "perf:native": "tape native/test/perf.js && tape native/test/multiAuthorPerf.js",
    "format-code": "prettier --write \"native/test/*.js\""
  }
}
